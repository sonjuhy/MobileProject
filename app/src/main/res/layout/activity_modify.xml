<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendar.ModifyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/Modify_imageView"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="left|top"
            app:srcCompat="@drawable/schdule" />

        <TextView
            android:id="@+id/Modify_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="left|top"
            android:text="일정수정"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#000000"/>
        <LinearLayout
            android:id="@+id/Modify_textLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Modify_textView">
            <TextView
                android:id="@+id/Modify_Date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Modify_textView"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="left|top"
                android:text="선택한 날짜 : "
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/Modify_Date2_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Modify_textView"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="left|top"
                android:text="일"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>


        <EditText
            android:id="@+id/Modify_Edittext_Name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Modify_textLinearLayout"
            android:layout_gravity="left|top"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext"
            android:hint="이름을 입력하세요" />

        <EditText
            android:id="@+id/Modify_Edittext_Content"
            android:layout_width="333dp"
            android:layout_height="211dp"
            android:layout_below="@+id/Modify_Edittext_Name"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext"
            android:hint="내용를 입력하세요" />

        <Button
            android:id="@+id/Modify_button_cancel"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Modify_Edittext_Content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/Modify_button_ok"
            android:background="@drawable/button"
            android:text="취소" />

        <Button
            android:id="@+id/Modify_button_ok"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Modify_Edittext_Content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/button"
            android:text="일정수정" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>